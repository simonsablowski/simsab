<VirtualHost *:80>
    ServerAdmin contact@simsab-local.net
    ServerName simsab-local.net
    ServerAlias www.simsab-local.net simsab-local.de www.simsab-local.de

    DocumentRoot /var/www/simsab/web

    RewriteEngine on
    RewriteCond %{HTTP_HOST} ^(www\.)?simsab-local\.de$
    RewriteRule ^(.*)$ http://www.simsab-local.net/de [L,R=301]
    RewriteCond %{HTTP_HOST} !^www\.simsab-local\.net$
    RewriteRule ^(.*)$ http://www.simsab-local.net$1 [L,R=301]

    <Directory /var/www/simsab/web>
        Options -Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    LogLevel debug
    ErrorLog /var/log/apache2/simsab/error.log
    CustomLog /var/log/apache2/simsab/access.log combined
</VirtualHost>
